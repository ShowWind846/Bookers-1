<main>
<h1>Editing Book</h1>

<!-- --------EDITフォーム-------- -->
<%= form_with model:@book, url:book_path(@book), method: :PATCH, local:true do |f| %>
<!----------ERRORメッセージ---------->
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  <h3><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <div class="field">
        <p>Title</p>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <p>Body</p>
        <%= f.text_area :body %>
    </div>
    <div class="actions">
        <%= f.submit 'Update Book' %>
    </div>
<% end %>

<!-- ---------LINK---------- -->
<BR>
<p><%= link_to "Show", "/books/#{@book.id}" %> / <%= link_to "Back", "/books" %></p>
</main>